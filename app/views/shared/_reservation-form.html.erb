<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @reservation, local: true, class: "needs-validation", novalidate: true do |f| %>
        <div class="mb-3">
          <%= f.label :reservation_type, "Type de réservation", class: "form-label" %>
          <%= f.select :reservation_type, options_for_select(["chambre-simple", "chambre-climatisée", "appartement-meublé"]), {}, class: "form-control form-select", required: true %>
          <div class="invalid-feedback">Veuillez sélectionner un type de réservation.</div>
        </div>
        <div class="mb-3">
          <%= f.label :nom, class: "form-label" %>
          <%= f.text_field :nom, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">Veuillez fournir un nom.</div>
        </div>
        <div class="mb-3">
          <%= f.label :telephone, class: "form-label" %>
          <%= f.text_field :telephone, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">Veuillez fournir un numéro de téléphone.</div>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">Veuillez fournir une adresse email.</div>
        </div>
        <div class="mb-3">
          <%= f.label :date_arrivee, "Date d'arrivée", class: "form-label" %>
          <%= f.date_field :date_arrivee, class: "form-control", required: true %>
          <div class="invalid-feedback">Veuillez sélectionner une date d'arrivée.</div>
        </div>
        <div class="mb-3">
          <%= f.label :date_depart, "Date de départ", class: "form-label" %>
          <%= f.date_field :date_depart, class: "form-control", required: true %>
          <div class="invalid-feedback">Veuillez sélectionner une date de départ.</div>
        </div>
        <div class="mb-3">
          <%= f.label :nb_adulte, "Nombre d'adultes", class: "form-label" %>
          <%= f.number_field :nb_adulte, class: "form-control", required: true %>
          <div class="invalid-feedback">Veuillez fournir le nombre d'adultes.</div>
        </div>
        <div class="mb-3">
          <%= f.label :nb_enfant, "Nombre d'enfants", class: "form-label" %>
          <%= f.number_field :nb_enfant, class: "form-control", required: true %>
          <div class="invalid-feedback">Veuillez fournir le nombre d'enfants.</div>
        </div>
        <div class="mb-3">
          <%= f.label :mode_paiement, "Mode de paiement", class: "form-label" %>
          <%= f.select :mode_paiement, options_for_select(["orange-money", "mtn-money", "virement-bancaire"]), {}, class: "form-control form-select", required: true %>
          <div class="invalid-feedback">Veuillez sélectionner un mode de paiement.</div>
        </div>
        <div class="mb-3">
          <%= f.label :montant_a_payer, "Montant net à payer", class: "form-label" %>
          <%= f.number_field :montant_a_payer, class: "form-control", readonly: true %>
          <div class="invalid-feedback">Le montant sera calculé automatiquement.</div>
        </div>
        <div class="mb-3 button-form">
          <%= f.submit "Annuler", class: "btn btn-danger", type: "reset", id: "annuler" %>
          <%= f.submit "Réserver", class: "btn btn-primary", id: "reserver" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
