<div class="offcanvas offcanvas-start navbar-menu" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      <li class="nav-item">
        <i class="fa-solid fa-house"></i>
        <%= link_to "Accueil", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <i class="fa-solid fa-layer-group"></i>
        <%= link_to "Decouvre nos services", services_index_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <i class="fa-solid fa-check"></i>
        <%= link_to "Faire une reservation", reservations_new_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <i class="fa-solid fa-comment"></i>
        <%= link_to "Laisse ton avis", new_commentaire_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <i class="fa-solid fa-arrow-left"></i>
          <%= link_to "Sign out",destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <i class="fa-solid fa-arrow-right"></i>
          <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
